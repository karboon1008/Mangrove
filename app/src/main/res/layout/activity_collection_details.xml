<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Collection_details">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/collection_image"
        android:layout_height="400dp"
        android:src="@drawable/aofficinalis"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/collection_image"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/coName"
            android:layout_marginEnd="10dp"
            >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20sp"
            android:id="@+id/coNameDetails"
            >
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/Date"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/coDate"
            android:layout_marginEnd="10dp"
            >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20sp"
            android:id="@+id/coDateDetails"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:id="@+id/Location"
        app:layout_constraintTop_toBottomOf="@+id/Date"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/coLocation"
            android:layout_marginEnd="10dp"
            >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20sp"
            android:id="@+id/coLocationDetails"
            >
        </TextView>
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>